= simple_form_for @dashboard.new_text_shout do |form|
  = form.text_field :body, placeholder: 'Shout content here', error: 'Need to add'
  = form.submit 'Shout!'

= simple_form_for @dashboard.new_photo_shout do |form|
  = form.file_field :image
  = form.submit 'Photo shout!'

= render @dashboard.timeline